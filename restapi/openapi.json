{
  "openapi": "3.0.1",
  "info": {
    "title": "TrackExpensesApp",
    "version": "v0.2.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "server"
    }
  ],
  "paths": {
    "/api/wallet": {
      "put": {
        "summary": "update existing wallet",
        "tags": [
          "Wallets"
        ],
        "operationId": "updateWallet",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateWalletDTO"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/WalletDTO"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "create new wallet",
        "tags": [
          "Wallets"
        ],
        "operationId": "createWallet",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateWalletDTO"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/WalletDTO"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "get list of all wallets",
        "tags": [
          "Wallets"
        ],
        "operationId": "findAllWallets",
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/WalletDTO"
                  }
                }
              }
            }
          },
          "400": {
            "description": "An error occurred while retrieving the list of wallets",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "WALLETS_LIST_RETRIEVING_ERROR"
                }
              }
            }
          }
        }
      }
    },
    "/api/wallet/{id}": {
      "get": {
        "summary": "get wallet by id",
        "tags": [
          "Wallets"
        ],
        "operationId": "findWallet",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of pet to return",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/WalletDTO"
                }
              }
            }
          },
          "400": {
            "description": "Invalid ID supplied"
          },
          "404": {
            "description": "wallet not found",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "WALLET_NOT_FOUND"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "delete wallet",
        "tags": [
          "Wallets"
        ],
        "operationId": "deleteWallet",
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/api/wallet/{id}/incomes": {
      "get": {
        "summary": "get list of all incomes for specific wallet",
        "tags": [
          "Incomes"
        ],
        "operationId": "findAllIncomes",
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/IncomeDTO"
                  }
                }
              }
            }
          },
          "400": {
            "description": "An error occurred while retrieving the list of incomes",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "INCOMES_LIST_RETRIEVING_ERROR"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "create new income",
        "tags": [
          "Incomes"
        ],
        "operationId": "createIncome",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateIncomeDTO"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/IncomeDTO"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "update income",
        "tags": [
          "Incomes"
        ],
        "operationId": "updateIncome",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateIncomeDTO"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/IncomeDTO"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/api/wallet/{id}/incomes/{id}": {
      "delete": {
        "summary": "delete income",
        "tags": [
          "Incomes"
        ],
        "operationId": "deleteIncome",
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "UpdateWalletDTO": {
        "required": [
          "id",
          "name"
        ],
        "type": "object",
        "properties": {
          "id": {
            "minimum": 1,
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "maxLength": 20,
            "minLength": 0,
            "pattern": "[a-z A-Z]+",
            "type": "string"
          }
        }
      },
      "WalletDTO": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "creationDate": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "CreateWalletDTO": {
        "required": [
          "name"
        ],
        "type": "object",
        "properties": {
          "name": {
            "maxLength": 20,
            "minLength": 0,
            "pattern": "[a-z A-Z]+",
            "type": "string"
          }
        }
      },
      "CreateIncomeDTO": {
        "required": [
          "amount"
        ],
        "type": "object",
        "properties": {
          "amount": {
            "minimum": 0,
            "type": "number"
          },
          "description": {
            "type": "string"
          }
        }
      },
      "UpdateIncomeDTO": {
        "required": [
          "id",
          "amount"
        ],
        "type": "object",
        "properties": {
          "id": {
            "minimum": 1,
            "type": "integer",
            "format": "int64"
          },
          "amount": {
            "minimum": 0,
            "type": "number"
          },
          "description": {
            "type": "string"
          }
        }
      },
      "IncomeDTO": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "amount": {
            "type": "integer",
            "format": "float"
          },
          "description": {
            "type": "string",
            "required": false
          },
          "creationDate": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    }
  }
}
